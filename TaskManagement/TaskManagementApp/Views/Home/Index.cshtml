@{
    ViewData["Title"] = "TaskFlow - Modern Task Management";
}

<link rel="stylesheet" href="~/css/landing.css" />

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 col-md-8 mx-auto text-center">
                <div class="hero-content">
                    <div class="hero-badge mb-4">
                        <i class="fas fa-rocket me-2"></i>
                        New and Improved
                    </div>
                    <h1 class="hero-title mb-4">
                        Organize Your Tasks Like Never Before
                    </h1>
                    <p class="hero-description mb-5">
                        Experience the future of productivity with TaskFlow. Streamline your workflow,
                        collaborate seamlessly, and achieve your goals with our intelligent task management platform.
                    </p>
                    <div class="hero-buttons mb-5">
                        <a class="btn btn-primary btn-lg me-3 cta-btn" asp-controller="Auth" asp-action="Register" id="getStartedBtn">
                            <i class="fas fa-play me-2"></i>
                            Get Started Free
                        </a>

                        <button class="btn btn-outline-light btn-lg demo-btn" id="watchDemoBtn">
                            <i class="fas fa-play-circle me-2"></i>
                            Watch Demo
                        </button>
                    </div>
                    <div class="hero-stats">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="stat-number">50k+</h3>
                                    <p class="stat-label">Active Users</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="stat-number">98%</h3>
                                    <p class="stat-label">Satisfaction</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="stat-number">24/7</h3>
                                    <p class="stat-label">Support</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Floating Elements -->
        <div class="floating-elements">
            <div class="floating-card card-1">
                <i class="fas fa-check-circle"></i>
                <span>Task Completed</span>
            </div>
            <div class="floating-card card-2">
                <i class="fas fa-users"></i>
                <span>Team Collaboration</span>
            </div>
            <div class="floating-card card-3">
                <i class="fas fa-chart-line"></i>
                <span>Progress Tracking</span>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="section-title mb-4">Powerful Features for Modern Teams</h2>
                <p class="section-description">
                    Everything you need to manage tasks, collaborate with your team, and boost productivity.
                </p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <h4 class="feature-title">Smart Task Management</h4>
                    <p class="feature-description">
                        Organize, prioritize, and track your tasks with intelligent automation and smart scheduling.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-users-cog"></i>
                    </div>
                    <h4 class="feature-title">Team Collaboration</h4>
                    <p class="feature-description">
                        Work together seamlessly with real-time updates, comments, and file sharing capabilities.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <h4 class="feature-title">Analytics & Reports</h4>
                    <p class="feature-description">
                        Get insights into your productivity with detailed analytics and customizable reports.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4 class="feature-title">Mobile Ready</h4>
                    <p class="feature-description">
                        Access your tasks anywhere, anytime with our responsive design and mobile apps.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 class="feature-title">Secure & Reliable</h4>
                    <p class="feature-description">
                        Your data is protected with enterprise-grade security and 99.9% uptime guarantee.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon">
                        <i class="fas fa-puzzle-piece"></i>
                    </div>
                    <h4 class="feature-title">Integrations</h4>
                    <p class="feature-description">
                        Connect with your favorite tools and streamline your workflow with 100+ integrations.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <div class="cta-content">
                    <h2 class="cta-title mb-4">Ready to Transform Your Productivity?</h2>
                    <p class="cta-description mb-5">
                        Join thousands of teams who have already revolutionized their workflow with TaskFlow.
                    </p>
                    <button class="btn btn-primary btn-lg cta-btn" id="startTrialBtn">
                        <i class="fas fa-rocket me-2"></i>
                        Start Free Trial
                    </button>
                    <p class="cta-note mt-3">
                        <i class="fas fa-check me-2"></i>
                        No credit card required • 14-day free trial
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/landing.js"></script>